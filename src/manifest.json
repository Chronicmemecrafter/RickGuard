{
  "author": "Unusual Norm",
  "description": "Prevent Rick Roll's",
  "manifest_version": 2,
  "name": "RickGuard",
  "version": "0.1",

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },

  "browser_action": {
    "default_title": "RickGuard",
    "default_icon": "images/icon.png"
  },

  "background": {
    "scripts": [
      "scripts/browser-polyfill.js",
      "scripts/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "scripts/browser-polyfill.js",
      "scripts/base.js"
    ]
  }],

  "web_accessible_resources": [
    "images/icon.png",
    "html/redirect.html",
    "js/redirect.js"
  ],

  "permissions": ["<all_urls>"]
}